<script>
    function filterPosts(category) {
        const posts = document.querySelectorAll('.post'); // Pobiera wszystkie kafelki

        posts.forEach(post => {
            const categories = post.getAttribute('data-category').split(' '); // Pobiera kategorie kafelka
            if (category === 'all' || categories.includes(category)) {
                post.style.display = 'block'; // Pokazuje kafelek
            } else {
                post.style.display = 'none'; // Ukrywa kafelek
            }
        });
    }

    const sidebar = document.getElementById('sidebar');
    const hamburger = document.getElementById('hamburger');

    hamburger.addEventListener('click', () => {
        const isHidden = sidebar.classList.contains('-translate-x-full');
        if (isHidden) {
            sidebar.classList.remove('-translate-x-full');
        } else {
            sidebar.classList.add('-translate-x-full');
        }
    });
</script>